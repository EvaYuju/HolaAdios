<Window x:Class="HolaAdios.Saludos"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HolaAdios"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBlock x:Name="Letrero" HorizontalAlignment="Center" Margin="0,136,0,0" TextWrapping="Wrap" Text="Selecciona una opción y pulsa el botón Muéstralo." VerticalAlignment="Top"/>
        <RadioButton x:Name="HolaBoton" Content="Hola" HorizontalAlignment="Left" Margin="293,185,0,0" VerticalAlignment="Top" IsChecked="True"/>
        <RadioButton x:Name="AdiosBoton" Content="Adiós" HorizontalAlignment="Left" Margin="426,185,0,0" VerticalAlignment="Top"/>
        <Button x:Name="MuestraBoton" Content="Muéstralo" HorizontalAlignment="Center" Margin="0,234,0,0" VerticalAlignment="Top" Click="MuestraBoton_Click" Width="82" Height="24"/>

    </Grid>
</Window>
